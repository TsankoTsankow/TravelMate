@model IEnumerable<DisplayPhotoViewModel>

@{
    ViewBag.Title = "Here are my awesome photos";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var photo in Model)
    {
        <div class="card col-4" style="width: 40rem; ">
            @if (photo != null)
            {

                <img class="card-img-top" style="width: 38rem;" src="/@photo.ImageUrl" alt="Picture">

            }

            <div class="card-body">

                <p class="mb-0">@photo.DateAdded</p>

            </div>
