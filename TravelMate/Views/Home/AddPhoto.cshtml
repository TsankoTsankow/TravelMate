@model AddPhotoViewModel

@{
    ViewBag.Title = "Add a new Photo";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" enctype="multipart/form-data" asp-action="AddPhoto">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <textarea asp-for="@Model.Name" class="form-control" aria-required="true" rows="1"></textarea>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Photo" class="control-label">Photos</label>
                <input asp-for="Photo" accept="image/*" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

