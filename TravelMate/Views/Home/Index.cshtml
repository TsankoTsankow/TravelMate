@model IEnumerable<PostViewModel>

@{
    ViewBag.Title = "My Cozy Lovely HomePage";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center column">
    @foreach (var post in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            @if (post.Photos.Count > 0)
            {
                foreach (var photo in post.Photos)
                {
                    
                    <img class="card-img-top" style="width: 18rem;" src="data:image/gif;base64,@Convert.ToBase64String(photo.Bytes)" alt="Picture">
                }
            }
            
            <div class="card-body">

                <p class="mb-0">@post.PostTime</p>
                <p class="mb-0">@post.Content</p>
                
            </div>
            @*<form class="input-group-sm" asp-controller="Books" asp-action="AddToCollection" asp-route-bookId="@book.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>*@
        </div>
        <hr />
    }
</div>