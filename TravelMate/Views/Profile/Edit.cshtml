@model EditProfileViewModel
@{
    ViewData["Title"] = "Edit your profile";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-controller="Profile" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden"  aria-required="true" asp-for="@Model.UserId" />
            <div class="text-center mb-3">
                <label asp-for="@Model.FirstName">First Name</label>
                <input class="form-control " autocomplete="First Name" aria-required="true" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.LastName">Last Name</label>
                <input class="form-control " autocomplete="Last Name" aria-required="true" asp-for="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.BirthDate">Birth Date</label>
                <input class="form-control " autocomplete="dd/mm/yyyy" aria-required="true" asp-for="@Model.BirthDate" />
                <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Information">About you</label>
                <input class="form-control" autocomplete="information" aria-required="true" asp-for="@Model.Information" />
                <span asp-validation-for="@Model.Information" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ProfilePicture" class="control-label">Photos</label>
                <input asp-for="@Model.ProfilePicture" accept="image/*" />
                <span asp-validation-for="@Model.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

