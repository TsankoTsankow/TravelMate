@model AllPostsQueryModel

@{
    ViewBag.Title = "Browse all posts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row">
        <div class="form-group col-md-3 d-flex justify-content-center">
            <div class="form-group">
                <label asp-for="Category"></label>
                <select asp-for="Category" class="form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <select asp-for="Country" class="form-control">
                    <option value="">All</option>
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country">@country</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Browse" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<p></p>
<hr />
<p></p>


@if (!Model.Posts.Any())
{
    <h2 class="text-center">There are no posts with this criteria yet!</h2>
}

<div class="row">
    @foreach (var post in Model.Posts)
    {
        <partial name="_PostViewPartial" model="@post" />
    }
</div>