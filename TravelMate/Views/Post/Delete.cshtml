@model PostViewModel

@{
    ViewBag.Title = "Delete post?";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-controller="Post" asp-action="Delete">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.PhotoUrl" alt="Post Image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="@Model.Content" class="control-label"></label>
                <input asp-for="@Model.Content" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>