@model NotificationViewModel


<div class="row">
    <div class="col-md-8">
        <h6>@Model.Description</h6>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Profile" asp-action="ViewProfile" asp-route-id="@Model.SenderId">View Profile</a>
    </div>
    <div class="col-md-2">
        @if (Model.NotificationType == 0)
        {
            <form asp-area="" asp-controller="Friends" asp-action="AddFriend" asp-route-id="@Model.SenderId" method="post">
                <input class="btn btn-success btn-sm" id="disable-button" type="submit" value="Add friend" />
            </form>
        }
    </div>
</div>



