@model AddCommentViewModel

@{
    ViewBag.Title = "Add comment";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="AddComment">
            <div class="mb-3">
                <input type="hidden" asp-for="@Model.Id" />
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label">Share your opinion</label>
                <textarea asp-for="@Model.Content" class="form-control" aria-required="true" rows="7"></textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

